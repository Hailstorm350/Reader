<!DOCTYPE html>
<html>
<head>
  <title>onReader</title>
  
  <%= stylesheet_link_tag params[:controller] %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

</head>
<body>


        <div class="header">
            <%= link_to image_tag(src="oR_top.png", :id => "logo", :alt => "onReader"), welcome_path %>
            <div class="topnav">
                <%= link_to 'READ', {:controller => :reader, :action => :index}, :class => 'toplink' %>
                <span class="slashdiv">//</span>
                <%= link_to 'EXPLORE', {:controller => :explore, :action => :index}, :class => 'toplink' %>
                <span class="slashdiv">//</span>
                <%= link_to 'ABOUT', {:controller => :static_pages, :action => :about}, :class => 'toplink' %>
            </div>
        </div>
        <div class="content_pane">
        <%= yield %>
        </div>
    <div class="login">
        <% if is_logged_in? %>
            <% if is_admin? %><%= link_to "Admin", admin_path %></br></br><% end %>
            <%= link_to "Manage Subscriptions", subscriptions_path %>
            </br>
            <%= link_to "Log Out", logout_path, :method => :delete %>
        <% else %>
            <%= link_to "Log In", login_path %>
        <% end %>
    </div>


</body>
</html>