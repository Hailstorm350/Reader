<!DOCTYPE html>
<html>
<head>
  <title>onReader</title>
  
  <%= stylesheet_link_tag params[:controller] %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

</head>
<body>


        <div class="header">
            <%= link_to image_tag(src="oR_splash.png", :id => "logo", :alt => "onReader"), welcome_path %>
        </div>
        
        <%= yield %>
        
    <div class="login">
        <% if is_logged_in? %>
            <%= link_to "Manage Subscriptions", subscriptions_path %>
            </br>
            <%= link_to "Log Out", logout_path, :method => :delete %>
        <% else %>
            <%= link_to "Log In", login_path %>
        <% end %>
    </div>


</body>
</html>