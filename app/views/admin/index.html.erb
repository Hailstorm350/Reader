<% title "Administration" %>
<h1>Welcome back <%= User.find(session[:user_id]).email %></h1>

<h1>Stat Reporting</h1>
<fieldset><legend>onReader has:</legend>
<%= link_to pluralize(@total_users, "user"), users_url %>
</br>
<%= link_to pluralize(@total_feeds, "feed"), feeds_url %>
</br>
<%= link_to pluralize(@total_subscriptions, "subscription"), subscriptions_url %>
</br>
<%= link_to pluralize(@total_posts, "post"), posts_url %>
</br>
<%= link_to pluralize(@total_categories, "category"), categories_url %>
</br>
<%= link_to pluralize(@total_votes, "vote"), votes_url %>
<!-- probably a bad idea to query the entire user database on every admin login in the long run -->
</fieldset>