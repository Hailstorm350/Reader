<%= form_for(@category) do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
      <% @category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :category_name %><br />
    <%= f.text_field :category_name %><br />
	<%= f.label :supercategories %><br />
	<% Supercategory.all.each do |supercategory|%>
	<div>
		<%= check_box_tag "category[supercategory_ids][]", supercategory.id, @category.supercategories.include?(supercategory)%>
		<%= supercategory.name%>
	</div>
	<% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
